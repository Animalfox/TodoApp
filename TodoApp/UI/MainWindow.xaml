<Window x:Class="TodoApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoApp"
        mc:Ignorable="d"
        Title="Todo Application" Height="200" Width="732">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <StackPanel Orientation="Horizontal" Margin="10">
      <Button Content="Add Task" Click="OnAddTask" Padding="5"/>
      <Button Content="Edit Task" Click="OnEditTask" Margin="5,0,0,0" Padding="5"/>
      <Button Content="Delete Task" Click="OnDeleteTask" Margin="5,0,0,0" Padding="5"/>
      <Button Content="Mark as Completed" Click="OnMarkTaskAsCompleted" Margin="5,0,0,0" Padding="5"/>
      <Button Content="Return to Current" Click="OnReturnTaskToCurrent" Margin="5,0,0,0" Padding="5"/>
      <TextBox x:Name="SearchBox" Width="200" Margin="10,0" Padding="5"/>
      <Button Content="Search" Click="OnSearchTask" Padding="5"/>
    </StackPanel>
    <ListBox x:Name="TaskList" Grid.Row="1" Margin="10" DisplayMemberPath="Title"/>
  </Grid>
</Window>